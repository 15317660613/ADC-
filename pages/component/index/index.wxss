page {
  /* background-color: #f8f8f8; */
  background-color: #ffffff;
}

.top-background {
  position: absolute;
  top: 0;
  background: #1879e0;
  width: 100%;
  height: 315rpx;
  z-index: -1;
}

picker {
  height: 60rpx;
}

.block-common {
  display: inline-block;
  text-align: center;
  width: 160rpx;
  color: #fff;
  height: 110rpx;
  
}

.top-center-text {
  font-size: 36rpx;
}

.top-text {
  font-size: 32rpx;
}

.bottom-text {
  font-size: 25rpx;
}

.block-left {
  margin: 15rpx 0 20rpx 60rpx;
}


.block-center {
  margin: 10rpx 0 20rpx 70rpx;
  border-bottom: #fff solid 4rpx;
}

.block-right {
  margin: 15rpx 40rpx 20rpx 60rpx;
}

.table {
  width: 95%;
  border-right: 0;
  border-bottom: 0;
   
  margin: 0 auto;
  box-shadow: 0 0 2rpx #dcdcdc;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th, .td, .t-left {
  padding: 10rpx;
  border-bottom: 1rpx solid #dfdfdf;
  border-right: 1rpx solid #dfdfdf;
  text-align: center;
  background: #fff;
  width: 100%;
  font-size: 32rpx;
  font-weight: 400;
  align-items: center;
  flex: 3;
}

.t-left {
  flex: 1;
  line-height: 49rpx;
  font-size: 30rpx;
  color: #999;
  background-color: #f7fbff;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.th {
  font-size: 30rpx;
  color: #3f7fc2;
  background-color: #f7fbff;
}

.height-top {
  height: 6vh;
  line-height: 6vh;
}

.height-bottom {
  height: 9vh;
  font-size: 28rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.swiper-height {
  height: 85vh;
 border-radius: 10rpx;
}

.daily {
  width: 75%;
  height: 4vh;
  border-radius: 3rpx;
  line-height: 4.5vh;
  margin: 2vh auto;
  align-items: center;
  white-space: pre-wrap;
}

.detailImage {
  width: 74rpx;
  height: 74rpx;
  position: absolute;
  top: 0;
  right: 0;
  border-bottom-left-radius:74rpx;
}
.dailyLine{
  margin: 0 auto;
}