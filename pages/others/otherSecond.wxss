page{
  background: #F8F8F8;
}
.background-top{
  position: absolute;
  top: 0;
  background: #1879E0;
  width: 100%;
  height: 315rpx;
  z-index: -1;
}
.search-view{
  background: rgba(255,255,255,0.9);
  width: 95%;
  height: 72rpx;
  margin: 25rpx auto;
  border-radius: 5rpx;
  display: flex;
}
.false-search{
  height: 72rpx;
  flex: 8;
  text-align: center;
  font-size: 32rpx;
}
.search{
  height: 72rpx;
  flex: 9;
  text-align: left;
  font-size: 32rpx;
}
.hide{
  display: none;
}
.search-icon,.search-cancel{
  flex: 1;
  line-height: 72rpx;
  text-align: center;
  font-size: 34rpx;
  color: #666666;
}
.search-cancel{
  flex: 2
}
.search-cancel{
  font-size: 32rpx;
  color: #1879E0;
}
.people{
  margin: 20rpx auto 0;
  width: 95%;
  padding-top: 30rpx;
  border-radius: 5rpx;
  background: #fff;
}
.person{
  width: 16%;
  margin :0 2% 30rpx;
  display: inline-block;
  text-align: center;
}
.avater{
  width: 93rpx;
  height: 93rpx;
}
.name{
  width:100%;
  text-align: center;
  color: #4C4C4C;
  font-size:30rpx;
  margin-top: 15rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.people1{
  margin: 20rpx auto 0;
  width: 95%;
  height: 30%;
  padding-top: 30rpx;
  border-radius: 5rpx;
  background: #fff;
}

.person1{
  width: 16%;
  margin :0 2% 30rpx;
  display: inline-block;
}
.avater1{
  width: 100%;
  display: inline-block;
}

.name1{
  width:100%;
  text-align: center;
  align-self: center;
  color: #4C4C4C;
  font-size:30rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: inline-block;
  height: 87px;
  line-height: 87px ;
}



.departments{
  margin: 0rpx auto 0;
}
.department{
  width: 46%;
  background: #FFFFFF;
  height: 150rpx;
  display: inline-block;
  text-align: center;
  margin-top: 20rpx;
  margin-left: 2.5%;
  border-radius: 6rpx;
}
.department-inner{
  margin: 25rpx auto;
}
.department-name{
  color: #0C72E0;
  font-size: 32rpx;
}
.department-mem{
  color: #4C4C4C;
  font-size: 30rpx;
  margin-top: 5rpx;
}
.icon-search{
line-height: 7rpx;
vertical-align: middle;
}
.search-icon{
  margin-top: 7rpx;
}