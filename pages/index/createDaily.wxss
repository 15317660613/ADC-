/* pages/index/createDaily.wxss */

.page {
  padding: 0 2%;
}

.top-time {
  text-align: center;
  border-bottom: 1rpx solid #ebeaea;
  height: 80rpx;
  line-height: 80rpx;
  font-family: PingFang-SC-Medium;
  font-size: 30rpx;
  color: #666;
}

.daily-type {
  overflow: hidden;
  margin-top: 30rpx;
}

.text-type {
  margin-bottom: 30rpx;
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  color: #333;
}

.text-choose {
  float: right;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: #999;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.daily-type button {
  float: left;
  width: 17%;
  margin: 0 1.5%;
  font-size: 28rpx;
  border-color: #999;
  color: #999;
}

.details {
  margin-top: 30rpx;
}

.scheduleGroup{
  display: flex;
  height: 250rpx;
 width: 100%;
 justify-content: space-between;
  }

.add{
  width: 100rpx;
 border: 0;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.add::after {

  border: 0;

} 




 .addimage{
     width: 35rpx;
  height: 35rpx;
line-height: 100rpx;
vertical-align: middle;
  }
 
  .addText{
     font-size: 22rpx;
    color: #333333;
    text-align: center;
    margin-top: 10rpx;
  }
.scheduleList{
  flex-direction: column;
  display: flex;
  height: 300rpx;
  background: #f7f7f7;
  border-radius: 10px;
  }
  
  .image{
    width: 32rpx;
  height: 32rpx;
 margin-left: 15rpx;
 float: right;
  }
 
 
  .text-time{
     float: left;
     box-sizing: border-box;
    font-size: 26rpx;
    color: #666666;
    text-align: left;
    width: 100%;
  }

  
  
  .time-bg{
    display: flex;

 border-radius: 10rpx;
justify-content: center;
  align-items: center;

 padding: 10rpx;
  }
  .visiableGroup{
  display: flex;
background-color: white;
border: 0;
 border-radius: 10rpx;
 margin: 10rpx;
 height: 60rpx;
  justify-content:space-between;
width: 200rpx;
align-items: center;
 padding: 10rpx;
  }

  .visiableGroup::after {

  border: 0;

} 
  .chooseTimeGroup{
    display: flex;
background-color: white;
 border-radius: 10rpx #fff;
 margin:10rpx 10rpx 5rpx;
 height: 40rpx;
 align-items: center;
 justify-content: space-between;
/* width: 230rpx; */
flex: 1;
 padding: 10rpx;
  }

  
  .visiable-text{
    float: left;
     box-sizing: border-box;
    font-size: 26rpx;
    color: #666666;
    
  }
  .picker{
    height: 100rpx;
  }

textarea {
  width: 100%;
flex: 1;
 border-radius: 10rpx;

  padding: 3%;
  color: #000;
  background-color: #ededed;
  font-size: 28rpx;
  box-sizing: border-box;
}
.scheduleListtitle{
  display: flex;
  justify-content: space-between;

  height: 80rpx;
}

.submit-form {
  width:100%;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: #adadad;
}
.currentWordNumber{

position: absolute;

bottom:15rpx;

right: 26rpx;

color: #888;

}
.currentWordNumberRed{

position: absolute;


bottom:15rpx;
right: 26rpx;

color: #F00;

}
.comment-group{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 15rpx;
}
.comment-group .left-comment{
 
   flex: 1;
}


.comment-group .right-comment{
  width: 80rpx;
  height: 80rpx;
  margin-top: 100rpx;
}
.address-style{
 padding:0 10rpx 10rpx;
 display: flex;
}
.address-text{
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: #999;
  padding-right: 65rpx;  
  padding-top: 15rpx;
}
.text-address{
  display: flex;
background-color: white;
border-radius: 10rpx #fff;
margin: 0rpx;
height: 40rpx;
align-items: center;
justify-content: space-between;
flex: 1;
padding: 10rpx;
font-size: 26rpx;
}